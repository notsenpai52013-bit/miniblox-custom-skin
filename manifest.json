{
  "manifest_version": 3,
  "name": "Miniblox Custom Skin",
  "version": "1.0",
  "description": "Shows your custom skin only for you in Miniblox",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://miniblox.io/*"],
  "content_scripts": [
    {
      "matches": ["https://miniblox.io/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
