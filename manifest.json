{
  "manifest_version": 3,
  "name": "Miniblox Custom Skin (Only Me)",
  "version": "1.0",
  "description": "Shows your custom skin only to you in Miniblox",
  "host_permissions": [
    "https://miniblox.io/*",
    "https://www.crazygames.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://miniblox.io/*",
        "https://www.crazygames.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
